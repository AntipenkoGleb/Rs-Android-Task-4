<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="AppTheme.App.CardView.Outlined" parent="AppTheme.App.CardView">
        <item name="strokeWidth">@dimen/card_stroke_width</item>
        <item name="strokeColor">@color/colorLightGray</item>
    </style>

    <style name="AppTheme.App">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CarTechnicalText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="AppTheme.App.EditTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <style name="AppTheme.App.DropDownInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <style name="AppTheme.App.EditText">
        <item name="singleLine">true</item>
    </style>

    <style name="AppTheme.App.EditText.NoEdit" parent="AppTheme.App.EditText">
        <item name="android:inputType">none</item>
    </style>

</resources>